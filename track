<!DOCTYPE html> <html> <head> <title>Notepad</title> <style> body { font-family: Arial, sans-serif; font-size: 14px; } textarea { width: 100%; height: 80vh; resize: vertical; } </style> </head> <body> <h1>Notepad</h1> <textarea id="note"></textarea> <button onclick="saveNote()">Save Note</button> <button onclick="showSavedNotes()">Show Saved Notes</button> <div id="savedNotes"></div> <script> function saveNote() { var note = document.getElementById("note").value; localStorage.setItem("note", note); }
function showSavedNotes() { var savedNotes = ""; for (var i = 0; i < localStorage.length; i++) { var key = localStorage.key(i); if (key.startsWith("note_")) { savedNotes += "<p><strong>" + key + "</strong>: " + localStorage.getItem(key) + "</p>"; } } document.getElementById("savedNotes").innerHTML = savedNotes; }
